# Reynard TTS Configuration Example

# TTS Configuration
TTS_ENABLED=true
TTS_DEFAULT_BACKEND=kokoro
TTS_KOKORO_MODE=powersave
TTS_AUDIO_DIR=generated/audio
TTS_RVC_ENABLED=false

# TTS Guardrails
TTS_MAX_TEXT_LENGTH=10000
TTS_MAX_CHUNK_LENGTH=2000
TTS_CHUNK_OVERLAP_CHARS=100
TTS_BACKEND_HEALTH_CHECK_INTERVAL=300
TTS_BACKEND_TIMEOUT_SECONDS=30
TTS_ENABLE_VOICE_COMPATIBILITY_CHECKS=true
TTS_ENABLE_LANGUAGE_VALIDATION=true
TTS_RATE_LIMIT_PER_MINUTE=60

# Audio Processing
TTS_AUDIO_PROCESSING_ENABLED=true
TTS_AUDIO_QUALITY=high

# Backend Specific Settings
KOKORO_UNLOAD_DELAY=300
KOKORO_PREWARM_THRESHOLD=10
