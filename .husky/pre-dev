#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
MAGENTA='\033[0;35m'
NC='\033[0m' # No Color

echo -e "${BLUE}🦊 Reynard Development Server Queue${NC}"
echo -e "${BLUE}===================================${NC}"

# Get the current directory (project being started)
CURRENT_DIR=$(pwd)
PROJECT_NAME=$(basename "$CURRENT_DIR")

echo -e "${CYAN}📁 Project: $PROJECT_NAME${NC}"
echo -e "${CYAN}📍 Path: $CURRENT_DIR${NC}"

# Check for development server conflicts
if ! bash "$(dirname "$0")/dev-server-queue.sh" check "$CURRENT_DIR"; then
    echo -e "\n${RED}❌ Development server conflict detected!${NC}"
    echo -e "${YELLOW}💡 Please resolve the conflict before starting the server.${NC}"
    echo -e "${CYAN}🔍 Run 'pnpm run dev:status' to see all running servers${NC}"
    exit 1
fi

echo -e "\n${GREEN}✅ Development server check passed!${NC}"
echo -e "${GREEN}🚀 Proceeding with server startup...${NC}"

# Show helpful information
echo -e "\n${BLUE}💡 Development Tips:${NC}"
echo -e "${BLUE}   • Auto-reload is enabled - no need to restart manually${NC}"
echo -e "${BLUE}   • Changes to code will be reflected automatically${NC}"
echo -e "${BLUE}   • Use 'pnpm run dev:status' to see all running servers${NC}"
echo -e "${BLUE}   • Multiple agents can work on different projects simultaneously${NC}"

echo -e "\n${MAGENTA}🦊 Happy coding!${NC}"
