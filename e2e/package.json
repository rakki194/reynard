{
  "name": "reynard-e2e-penetration-tests",
  "version": "1.0.0",
  "description": "E2E authentication and penetration tests for Reynard ecosystem",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:auth": "playwright test --config=playwright.config.dom.ts",
    "test:penetration": "playwright test --config=playwright.config.penetration.ts",
    "test:dom": "playwright test --config=playwright.config.dom.ts",
    "test:auth:headed": "playwright test --config=playwright.config.dom.ts --headed",
    "test:auth:debug": "playwright test --config=playwright.config.dom.ts --debug",
    "test:auth:ui": "playwright test --config=playwright.config.dom.ts --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:penetration-report": "playwright show-report --config=playwright.config.penetration.ts",
    "test:auth-report": "playwright show-report --config=playwright.config.dom.ts",
    "test:i18n": "playwright test --config=playwright.config.i18n.ts",
    "test:i18n:headed": "playwright test --config=playwright.config.i18n.ts --headed",
    "test:i18n:debug": "playwright test --config=playwright.config.i18n.ts --debug",
    "test:i18n:ui": "playwright test --config=playwright.config.i18n.ts --ui",
    "test:i18n:report": "playwright show-report --config=playwright.config.i18n.ts",
    "benchmark:i18n": "playwright test --config=playwright.config.i18n.ts i18n-benchmark.spec.ts",
    "benchmark:i18n:rendering": "playwright test --config=playwright.config.i18n.ts i18n-rendering-approaches.spec.ts",
    "benchmark:i18n:bundles": "playwright test --config=playwright.config.i18n.ts i18n-bundle-analysis.spec.ts",
    "benchmark:i18n:all": "npm run benchmark:i18n && npm run benchmark:i18n:rendering && npm run benchmark:i18n:bundles",
    "install:browsers": "playwright install",
    "fenrir:test": "cd ../fenrir && python3 run_all_exploits.py",
    "fenrir:test:destructive": "cd ../fenrir && python3 run_all_exploits.py --destructive",
    "fenrir:test:verbose": "cd ../fenrir && python3 run_all_exploits.py --verbose",
    "security:assess": "npm run test:penetration && npm run fenrir:test",
    "security:assess:destructive": "npm run test:penetration && npm run fenrir:test:destructive"
  },
  "devDependencies": {
    "@playwright/test": "1.55.0",
    "reynard-testing": "0.1.2",
    "typescript": "5.9.2",
    "@types/node": "24.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "penetration-testing",
    "security",
    "authentication",
    "reynard"
  ],
  "author": "ğŸº The Wolf",
  "license": "MIT"
}