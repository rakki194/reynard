{
  "name": "reynard-queue-watcher",
  "version": "0.1.0",
  "description": "Queue-based file watcher for Reynard development workflow",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "reynard-queue-watcher": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./queue-manager": {
      "types": "./dist/queue-manager.d.ts",
      "import": "./dist/queue-manager.js"
    },
    "./processors": {
      "types": "./dist/processors.d.ts",
      "import": "./dist/processors.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && rm -f tsconfig.tsbuildinfo && tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "watch": "tsx src/cli.ts",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "24.4.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "^18.0.1",
    "reynard-testing": "workspace:*",
    "tsx": "^4.0.0",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["file-watcher", "queue", "development", "typescript", "reynard", "build-tools"],
  "repository": {
    "type": "git",
    "url": "https://github.com/runeset/reynard",
    "directory": "packages/queue-watcher"
  },
  "license": "MIT"
}
