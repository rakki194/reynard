{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx", "**/__tests__/**/*"],
  "references": [
    { "path": "../../core/core" },
    { "path": "../../core/validation" },
    { "path": "../../services/api-client" },
    { "path": "../../ui/components-core" }
  ]
}
