{
  "name": "reynard-caption",
  "version": "0.2.0",
  "description": "Caption editing UI components for Reynard - textarea and tag bubbles for caption editing",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc -p tsconfig.json --emitDeclarationOnly",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "source ../../vitest.env.global && VITEST_AGENT_ID=caption-package ../../scripts/vitest-global-queue.sh run caption-package",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "caption",
    "ui",
    "components",
    "textarea",
    "tags",
    "editing"
  ],
  "dependencies": {
    "reynard-api-client": "workspace:*",
    "reynard-core": "workspace:*",
    "reynard-components": "workspace:*",
    "reynard-fluent-icons": "workspace:*",
    "reynard-monaco": "workspace:*",
    "reynard-audio": "workspace:*",
    "reynard-video": "workspace:*",
    "reynard-image": "workspace:*",
    "reynard-multimodal": "workspace:*",
    "reynard-model-management": "workspace:*"
  },
  "devDependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@types/node": "24.4.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "^18.0.1",
    "reynard-testing": "workspace:*",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "1.9.9"
  }
}
