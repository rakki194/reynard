{
  "name": "reynard-chat",
  "version": "0.2.0",
  "description": "Reynard Chat System - Production-ready chat messaging system for SolidJS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": ["dist/**/*", "README.md"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && rm -f tsconfig.tsbuildinfo && tsc -p tsconfig.json --declaration --emitDeclarationOnly && (mv dist/chat.css dist/styles.css 2>/dev/null || mv dist/asset dist/styles.css 2>/dev/null || true)",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "source ../../vitest.env.global && VITEST_AGENT_ID=chat-package ../../scripts/testing/vitest-global-queue.sh run chat-package",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["solidjs", "chat", "messaging", "streaming", "markdown", "p2p", "ui"],
  "peerDependencies": {
    "solid-js": "1.9.9"
  },
  "dependencies": {
    "reynard-api-client": "workspace:*",
    "reynard-core": "workspace:*",
    "reynard-fluent-icons": "workspace:*",
    "reynard-composables": "workspace:*"
  },
  "devDependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "^18.0.1",
    "reynard-testing": "workspace:*",
    "solid-js": "1.9.9",
    "typescript": "5.9.2",
    "vite": "7.1.6",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4"
  }
}
