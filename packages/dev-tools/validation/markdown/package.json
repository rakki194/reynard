{
  "name": "@reynard/dev-tools-markdown-validator",
  "version": "1.0.0",
  "description": "ðŸ¦Š Markdown validation tools for the Reynard ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "markdown-validator": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "clean": "rm -rf dist"
  },
  "keywords": ["markdown", "validation", "toc", "table-of-contents", "reynard", "dev-tools"],
  "author": "Reynard Development Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "24.5.2",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "files": ["dist", "README.md"]
}
