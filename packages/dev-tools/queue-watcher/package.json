{
  "name": "reynard-queue-watcher",
  "version": "0.1.0",
  "description": "Queue-based file watcher for Reynard development workflow",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "reynard-queue-watcher": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./queue-manager": {
      "types": "./dist/queue-manager.d.ts",
      "import": "./dist/queue-manager.js"
    },
    "./processors": {
      "types": "./dist/processors.d.ts",
      "import": "./dist/processors.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "pnpm clean && vite build && tsc -p tsconfig.build.json --declaration --emitDeclarationOnly && pnpm postbuild",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "postbuild": "chmod +x dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm clean:all",
    "clean:all": "rm -rf dist && rm -f *.tsbuildinfo && find . -name '*.js' -not -path './node_modules/*' -not -path './dist/*' -delete && find . -name '*.d.ts' -not -path './node_modules/*' -not -path './dist/*' -delete && find . -name '*.js.map' -not -path './node_modules/*' -not -path './dist/*' -delete && find . -name '*.d.ts.map' -not -path './node_modules/*' -not -path './dist/*' -delete",
    "clean:build": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "watch": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "prebuild": "pnpm clean:build"
  },
  "dependencies": {
    "chokidar": "4.0.3",
    "commander": "14.0.1",
    "reynard-dev-tools-catalyst": "workspace:*",
    "reynard-project-architecture": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "^18.0.1",
    "reynard-testing": "workspace:*",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vite": "7.1.6",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["file-watcher", "queue", "development", "typescript", "reynard", "build-tools"],
  "repository": {
    "type": "git",
    "url": "https://github.com/runeset/reynard",
    "directory": "packages/queue-watcher"
  },
  "license": "MIT"
}
