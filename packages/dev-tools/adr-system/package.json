{
  "name": "reynard-adr-system",
  "version": "1.0.0",
  "description": "Intelligent Architecture Decision Record (ADR) system for the Reynard framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:verbose": "vitest run --reporter=verbose",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "test:unit": "vitest run src/__tests__/*.test.ts --exclude src/__tests__/integration.test.ts",
    "test:all": "vitest run --coverage --reporter=verbose",
    "lint": "eslint src --ext .ts,.tsx",
    "analyze": "node dist/analyze.js"
  },
  "keywords": ["adr", "architecture", "decision-records", "codebase-analysis", "reynard"],
  "author": "Reynard Architecture Team",
  "license": "MIT",
  "dependencies": {
    "typescript": "5.9.2",
    "fs-extra": "11.3.2",
    "glob": "11.0.3",
    "yaml": "2.8.1",
    "commander": "14.0.1",
    "solid-js": "1.9.9",
    "reynard-primitives": "workspace:*",
    "reynard-charts": "workspace:*",
    "reynard-fluent-icons": "workspace:*",
    "reynard-project-architecture": "workspace:*",
    "reynard-3d": "workspace:*"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "vitest": "3.2.4",
    "reynard-testing": "workspace:*"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
