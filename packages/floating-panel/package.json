{
  "name": "reynard-floating-panel",
  "version": "0.1.0",
  "description": "Advanced floating panel system with staggered animations and state management for Reynard",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "test": "source ../../vitest.env.global && VITEST_AGENT_ID=floating-panel-package ../../scripts/vitest-global-queue.sh run floating-panel-package",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [
    "reynard",
    "floating-panel",
    "overlay",
    "animation",
    "solidjs",
    "ui-components"
  ],
  "author": "Balazs Horvath",
  "license": "MIT",
  "dependencies": {
    "reynard-themes": "workspace:*",
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "eslint": "8.57.1",
    "happy-dom": "18.0.1",
    "jsdom": "^26.1.0",
    "reynard-testing": "workspace:*",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "1.9.9"
  }
}
