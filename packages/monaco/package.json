{
  "name": "@reynard/monaco",
  "version": "0.1.0",
  "description": "Monaco code editor and text editing components for Reynard",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "monaco",
    "code-editor",
    "text-editor",
    "syntax-highlighting",
    "reynard",
    "solidjs"
  ],
  "author": "Reynard Team",
  "license": "MIT",
  "dependencies": {
    "monaco-editor": "0.52.2",
    "@monaco-editor/loader": "1.5.0",
    "shiki": "3.12.2"
  },
  "devDependencies": {
    "@types/node": "24.3.1",
    "solid-js": "1.9.9",
    "typescript": "5.9.2",
    "vite": "7.1.4",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.35.0"
  },
  "peerDependencies": {
    "solid-js": "1.9.9"
  }
}
