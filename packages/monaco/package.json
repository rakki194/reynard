{
  "name": "reynard-monaco",
  "version": "0.2.0",
  "description": "Monaco code editor and text editing components for Reynard",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "vite build && pnpm run build:types",
    "build:types": "rm -f tsconfig.tsbuildinfo && tsc --build tsconfig.declarations.json --force",
    "dev": "vite build --watch",
    "test": "source ../../vitest.env.global && VITEST_AGENT_ID=monaco-package ../../scripts/vitest-global-queue.sh run monaco-package",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["monaco", "code-editor", "text-editor", "syntax-highlighting", "reynard", "solidjs"],
  "author": "Balazs Horvath",
  "license": "MIT",
  "dependencies": {
    "monaco-editor": "0.52.2",
    "@monaco-editor/loader": "1.5.0",
    "shiki": "3.12.2",
    "reynard-composables": "workspace:*",
    "reynard-themes": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.4.0",
    "solid-js": "1.9.9",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.35.0"
  },
  "peerDependencies": {
    "solid-js": "1.9.9"
  }
}
