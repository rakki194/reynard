{
  "name": "reynard-code-quality",
  "version": "0.1.0",
  "description": "ðŸ¦Š Comprehensive code quality analysis system for Reynard - SonarQube-like functionality with security integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && rm -f tsconfig.tsbuildinfo && tsc -p tsconfig.json --declaration --emitDeclarationOnly",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "source ../../vitest.env.global && VITEST_AGENT_ID=code-quality-package ../../scripts/vitest-global-queue.sh run code-quality-package",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:docs": "vitest run --config vitest.docs.config.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "analyze": "node dist/cli.js",
    "analyze:watch": "node dist/cli.js watch"
  },
  "keywords": [
    "code-quality",
    "static-analysis",
    "security",
    "sonarqube",
    "reynard",
    "typescript",
    "python",
    "linting",
    "quality-gates",
    "vulnerability-detection"
  ],
  "author": "Reynard Framework",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "reynard-ui": "workspace:*",
    "reynard-charts": "workspace:*",
    "reynard-components": "workspace:*",
    "reynard-fluent-icons": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.4.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "^18.0.1",
    "reynard-testing": "workspace:*",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "1.9.9"
  },
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/reynard.git",
    "directory": "packages/code-quality"
  },
  "bugs": {
    "url": "https://github.com/your-org/reynard/issues"
  },
  "homepage": "https://github.com/your-org/reynard/tree/main/packages/code-quality#readme"
}
