#!/usr/bin/env node

/**
 * Wrapper script for reynard-docs CLI with custom ESM loader
 */

import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);
const packageDir = dirname(__dirname);

const cliPath = join(packageDir, 'dist', 'cli', 'index.js');
const loaderPath = join(packageDir, 'loader.mjs');

const child = spawn('node', ['--import', `data:text/javascript,import { register } from "node:module"; import { pathToFileURL } from "node:url"; register("${loaderPath}", pathToFileURL("./"));`, cliPath, ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: process.cwd()
});

child.on('exit', (code) => {
  process.exit(code || 0);
});

child.on('error', (error) => {
  console.error('❌ Failed to start reynard-docs:', error);
  process.exit(1);
});
