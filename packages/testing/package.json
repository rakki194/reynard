{
  "name": "reynard-testing",
  "version": "0.2.0",
  "description": "Unified testing framework for Reynard packages",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./mocks": {
      "import": "./dist/mocks/index.js",
      "types": "./dist/mocks/index.d.ts"
    },
    "./fixtures": {
      "import": "./dist/fixtures/index.js",
      "types": "./dist/fixtures/index.d.ts"
    },
    "./doc-tests": {
      "import": "./dist/doc-tests/index.js",
      "types": "./dist/doc-tests/index.d.ts"
    },
    "./doc-test-runner": {
      "import": "./dist/doc-test-runner/index.js",
      "types": "./dist/doc-test-runner/index.d.ts"
    }
  },
  "files": ["dist", "configs"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --build",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "source ../../vitest.env.global && VITEST_AGENT_ID=testing-package ../../scripts/vitest-global-queue.sh run testing-package",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:docs": "vitest run --config vitest.docs.config.ts",
    "doc-tests": "node src/doc-test-runner.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "i18n:test": "tsx src/scripts/i18n-test-cli.ts run",
    "i18n:setup": "tsx src/scripts/i18n-test-cli.ts setup",
    "i18n:validate": "tsx src/scripts/i18n-test-cli.ts validate",
    "i18n:list": "tsx src/scripts/i18n-test-cli.ts list",
    "i18n:eslint": "tsx src/scripts/i18n-test-cli.ts eslint",
    "i18n:ci": "tsx src/scripts/i18n-test-cli.ts ci"
  },
  "keywords": ["testing", "vitest", "solidjs", "reynard", "test-utils", "mocks", "fixtures"],
  "author": "Balazs Horvath",
  "license": "MIT",
  "dependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@testing-library/user-event": "14.6.1",
    "commander": "14.0.1",
    "reynard-i18n": "workspace:*",
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@types/eslint": "9.6.1",
    "@types/node": "24.4.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "18.0.1",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "1.9.9",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
