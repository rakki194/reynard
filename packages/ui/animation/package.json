{
  "name": "reynard-animation",
  "version": "0.1.1",
  "description": "ðŸ¦Š Unified animation system for Reynard - consolidates all animation functionality with optional dependency support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./easing": {
      "types": "./dist/easing/index.d.ts",
      "import": "./dist/easing/index.js"
    },
    "./engines": {
      "types": "./dist/engines/index.d.ts",
      "import": "./dist/engines/index.js"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "import": "./dist/composables/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./color": {
      "types": "./dist/color/index.d.ts",
      "import": "./dist/color/index.js"
    },
    "./color-fallback-animations": "./dist/color/ColorFallbackAnimations.css",
    "./3d-fallback-animations": "./dist/3d/ThreeDFallbackAnimations.css",
    "./global-animation-styles": "./dist/global/GlobalAnimationStyles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && rm -f tsconfig.tsbuildinfo && tsc -p tsconfig.json --declaration --emitDeclarationOnly",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "source ../../../vitest.env.global && VITEST_AGENT_ID=animation-package ../../../scripts/testing/vitest-global-queue.sh run animation-package",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:docs": "vitest run --config vitest.docs.config.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "18.0.1",
    "reynard-testing": "workspace:*",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-solid": "2.11.8",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": ">=1.9.0"
  },
  "peerDependenciesMeta": {
    "solid-js": {
      "optional": true
    }
  },
  "keywords": [
    "animation",
    "solidjs",
    "reynard",
    "easing",
    "performance",
    "3d",
    "staggered",
    "optional",
    "fallback",
    "accessibility"
  ],
  "author": "Reynard Team",
  "license": "MIT",
  "sideEffects": false,
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/index.cjs",
      "maxSize": "50 kB"
    }
  ],
  "publishConfig": {
    "access": "public"
  }
}