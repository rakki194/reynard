{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": [
    "vite.config.ts",
    "vitest.config.ts",
    "*.config.ts",
    "*.config.js",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test-setup.ts",
    "**/__tests__/**/*.test.ts",
    "**/__tests__/**/*.test.tsx"
  ]
}
