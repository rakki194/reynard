{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Path mappings for local packages */
    "baseUrl": ".",
    "paths": {
      "@reynard/core": ["../../packages/core/src"],
      "@reynard/components": ["../../packages/components/src"],
      "@reynard/ui": ["../../packages/ui/src"],
      "@reynard/charts": ["../../packages/charts/src"],
      "@reynard/gallery": ["../../packages/gallery/src"],
      "@reynard/auth": ["../../packages/auth/src"],
      "@reynard/settings": ["../../packages/settings/src"]
    }
  },
  "include": ["src/**/*", "vite-env.d.ts"]
}
