# Database Configuration
DATABASE_URL=postgresql://promptnote_user:promptnote_password@localhost:5432/promptnote_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=promptnote_db
DB_USER=promptnote_user
DB_PASSWORD=promptnote_password

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (for sessions/caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AI/ML Services (optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_FILE_ATTACHMENTS=true
